<?xml version="1.0" encoding="utf-8"?>

<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS Plug Unplug VHDx tests</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>unplug</suiteName>
            <suiteTests>
                <suiteTest>DiskHotPlugUnplug</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>
    <testCases>
       <test>
            <testName>DiskHotPlugUnplug</testName>
            <testScript>setupscripts\unPlug.ps1</testScript>
            <files>remote-scripts/ica/utils.sh,remote-scripts/ica/unPlug.sh</files>
            <cleanupScript>setupscripts\Remove-VHDXHardDisk.ps1</cleanupScript>
            <setupScript>setupscripts\Add-VHDXForResize.ps1</setupScript>
            <testparams>
                <param>TC_COVERED=Something-01</param>
                <param>Type1=Dynamic</param>
                <param>SectorSize1=512</param>
                <param>DefaultSize1=1GB</param>
                <param>Type2=Dynamic</param>
                <param>SectorSize2=512</param>
                <param>DefaultSize2=2GB</param>
            </testparams>
            <timeout>800</timeout>        
        </test>
    </testCases>

    <VMs>
        <vm>
            <hvServer>localhost</hvServer>
            <vmName>vm</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>key_id_rsa.ppk</sshKey>
            <suite>unplug</suite>
        </vm>
    </VMs>
</config>
