<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LISA NUMA Tests Run on WS2012R2</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>CheckModules</suiteName>
            <suiteTests>
                <suiteTest>Check_initrd</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>
    <testCases>
        <test>
            <testName>Check_initrd</testName>
            <testScript>modules_check.sh</testScript>
            <files>remote-scripts/ica/modules_check.sh</files>
            <testparams>
                <param>hv_modules=(hv_vmbus.ko hv_storvsc.ko hv_netvsc.ko hv_utils.ko hyperv-keyboard.ko hid-hyperv.ko)</param>
            </testparams>
            <timeout>300</timeout>
        </test>
    </testCases>
    <VMs>
        <vm>
            <hvServer>hvserver</hvServer>
            <vmName>vm</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>ppk_id_rsa.ppk</sshKey>
            <suite>CheckModules</suite>
        </vm>
    </VMs>
</config>
