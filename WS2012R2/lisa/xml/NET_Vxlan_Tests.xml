<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS_Network_tests_run_on_2012R2</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>Network</suiteName>
            <suiteTests>
                <suiteTest>Vxlan</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>Vxlan</testName>
            <setupScript>SetupScripts\NET_ADD_NIC_MAC.ps1</setupScript>
            <testParams>
                <param>NIC=NetworkAdapter,Private,Private,001600112200</param>
                <param>STATIC_IP1=10.10.10.10</param>
                <param>STATIC_IP2=10.10.10.20</param>
                <param>NETMASK=255.255.255.0</param>
            </testParams>
            <testScript>setupscripts\Vxlan_Test.ps1</testScript>
            <files>remote-scripts/ica/utils.sh</files>
            <timeout>800</timeout>
        </test>
    </testCases>    
    <VMs>
        <vm>
            <hvServer>localhost</hvServer>
            <vmName>VM1</vmName>
            <os>Linux</os>
            <ipv4>vm1ipv4</ipv4>
            <sshKey>rsa.ppk</sshKey>
            <testParams>
                <param>VM2NAME=VM2</param>
                <param>vm2ipv4=vm2ipv4</param>
                <param>SnapshotName=ICABase</param>
            </testParams>
            <suite>Network</suite>
        </vm>
    </VMs>

</config>
