<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LISA NUMA Tests Run on WS2012R2</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>Numa</suiteName>
            <suiteTests>
                <suiteTest>CheckNuma</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>
    <testCases>
        <test>
            <testName>CheckNuma</testName>
            <setupScript>setupScripts\ChangeCPU.ps1</setupScript> 
            <testScript>setupScripts\NUMA.ps1</testScript>
            <files>remote-scripts\ica\utils.sh</files>
            <testParams>  
                <param>VCPU=4</param>
                <param>NumaNodes=1</param>
                <param>Sockets=1</param>
            </testParams>
            <timeout>300</timeout>
        </test>
    </testCases>
    <VMs>
        <vm>
            <hvServer>hvserver</hvServer>
            <vmName>vmname</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>key_id_rsa.ppk</sshKey>
            <suite>Numa</suite>
        </vm>
    </VMs>
</config>
