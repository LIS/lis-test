<?xml version="1.0" encoding="utf-8"?>

<config>
    <global>
        <logfileRootDir>TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LIS Hyper-V Daemons tests</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>
    </global>

    <testSuites>
        <suite>
            <suiteName>Hyperv-Daemons</suiteName>
            <suiteTests>
                <suiteTest>Hyperv_Daemons_Verify_Default_Status</suiteTest>
                <suiteTest>Hyperv_Daemons_Verify_Default_Files</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>

        <test>
            <testName>Hyperv_Daemons_Verify_Default_Status</testName>
            <testScript>Hyperv_Daemons_Status_Test.sh</testScript>
            <files>remote-scripts/ica/Hyperv_Daemons_Status_Test.sh</files>
            <files>remote-scripts/ica/utils.sh</files>
            <timeout>1800</timeout>
            <testParams>
      				<param>TC_COVERED=Hyperv-Daemons-01</param>
      			</testParams>
      </test>

      <test>
          <testName>Hyperv_Daemons_Verify_Default_Files</testName>
          <testScript>Hyperv_Daemons_Files_Test.sh</testScript>
          <files>remote-scripts/ica/Hyperv_Daemons_Files_Test.sh</files>
          <files>remote-scripts/ica/utils.sh</files>
          <timeout>1800</timeout>
          <testParams>
            <param>TC_COVERED=Hyperv-Daemons-02</param>
          </testParams>
    </test>

    </testCases>

    <VMs>
	      <vm>
            <hvServer>localhost</hvServer>
            <vmName>vmName</vmName>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>key_id_rsa.ppk</sshKey>
            <suite>Hyperv-Daemons</suite>
        </vm>
    </VMs>
</config>
